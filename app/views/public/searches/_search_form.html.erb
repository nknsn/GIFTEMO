<% if user_signed_in? %>
  <div class="search_form">
    <%= form_with url: search_path, method: :get, local: true do |f| %>

      <%= f.text_field :content, :placeholder => "シーン",  class: "control" %>
      <%= f.select :model, options_for_select({"ギフトリスト" => "PresentList" }),include_blank:"選択", class: "control" %>

      <%= f.select :method, options_for_select({"完全一致" => "perfect_match", "前方一致" => "forward_match", "後方一致" => "backword_match", "部分一致" => "partial_match"}),include_blank:"選択", class: "control" %>

      <%= f.submit "検索", class: "control fa fa-search" %>

    <% end %>
  </div>
<% end %>
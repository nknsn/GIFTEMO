<div class="search-form">
  <%= render 'public/searches/search_form' %>
</div>

<%#= link_to "全リスト", present_list_path, class: "button is-dark rounded-pill" %>
<%#= link_to "贈り物", present_list_path(status: "贈り物"), class: "button is-dark rounded-pill" %>
<%#= link_to "頂き物", present_list_path(status: "頂き物"), class: "button is-dark rounded-pill" %>
<table width="800" class="table table-bordered">
  <thead>
    <tr>
      <th><strong>日付</strong></th>
      <th><strong></strong></th>
      <th><strong>相手</strong></th>
      <th><strong>アイテム</strong></th>
      <th><strong>シーン</strong></th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <% present_lists.each do |present_list| %>
  <tbody>
    <tr>
      <td><%= present_list.date %></td>
      <td><%= present_list.category_i18n %></td>
      <td><%= present_list.name %></td>
      <td><%= present_list.item %></td>
      <td><%= present_list.scene %></td>
      <td>
        <%= link_to edit_present_list_path(present_list), class: "button is-success is-inverted" do %>
          <i class="fa fa-pencil-square-o fa-lg"></i>
        <% end %>
      </td>
      <td>
        <%= link_to present_list_path(present_list), method: :delete, data: { confirm: '本当に削除しますか？' }, class: "button is-danger is-inverted" do %>
          <i class="fa fa-trash-o fa-lg"></i>
        <% end %>
      </td>
    </tr>
  </tbody>
  <% end %>
</table>

<div class="columns pt-5 pl-6 is-centered">


  <div class="column is-half">
    <table width="500" class="table table-bordered">
      <tbody>
        <tr>
          <td>MY NAME</td>
          <td><%= @user.name %></td>
        </tr>
        <tr>
          <td>MY BIRTHDAY</td>
          <td><%= @user.birthdate %></td>
        </tr>
        <tr>
          <td>MY EMAIL ADDRESS</td>
          <td><%= @user.email %></td>
        </tr>
     </tbody>
    </table>
    <% if @user.name != "guestuser" %>
    <div>
      <%= link_to  edit_user_path, class: "button is-outlined" do %>
        <i class="fa fa-pencil fa-2x"></i>
      <% end %>
    </div>
    <% end %>
  </div>


  <div class="column is-2">
    <div>
      <%= link_to friends_path, class: "button is-black" do %>
        <p><i class="fa fa-users fa-lg "></i> おともだちリスト</p>
      <% end %>
    </div><br>
    <div>
      <%= link_to present_lists_path, class: "button is-black" do %>
        <p><i class="fa fa-gift fa-lg "></i> ギフトリスト</p>
      <% end %>
    </div>
  </div>
</div>

<%= render 'public/recommend_gifts/top' %>



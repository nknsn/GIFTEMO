  <section class="section">
    <div class="container">
      <div class="columns is-centered">

        <%= form_with model: @user, local:true do |f| %>
          <div class="field">
            <%= f.label :name, class: "label" %>
            <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "input" %>
          </div>

          <div class="field">
            <%= f.label :birthdate, class: "label" %>
            <%= f.date_select :birthdate, use_month_numbers: true,start_year: 1940, end_year: (Time.now.year - 10), default: Date.new(2000, 1, 1), class: "input" %>
          </div>

          <div class="field">
            <%= f.label :email, class: "label" %>
            <%= f.email_field :email, autocomplete: "email", class: "input" %>
          </div></br>

          <div class="actions">
            <%= f.submit "更新", class: "button is-black" %>
          </div>
        <% end %>
      </div>
    </div>
  </section>